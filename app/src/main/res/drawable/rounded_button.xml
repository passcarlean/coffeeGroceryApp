<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp"/>
            <solid android:color="#00171F"/>
            <stroke
                android:color="#007EA7"
                android:width="2dp"/>
            <padding
                android:bottom="4dp"
                android:right="4dp"
                android:top="16dp"
                android:left="16dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp"/>
            <solid android:color="#00171F"/>
            <stroke
                android:color="#007EA7"
                android:width="2dp"/>
            <padding
                android:bottom="16dp"
                android:right="16dp"
                android:top="16dp"
                android:left="16dp"/>
        </shape>
    </item>
</selector>